set number
set nocompatible
set noswapfile
set hidden
filetype plugin indent on
syntax on

set noshowmode


" for gitgutter
set updatetime=100

" remove scrollbars on macvim
set guioptions=

" highlight searched word
set hlsearch

" enable incremental search
set is

" No blinking cursor on MacVim
set guicursor=a:blinkon0


" Search
set ignorecase
set smartcase
set tabstop=4
set shiftwidth=4
set expandtab

" cd into Projects on startup
cd ~/Projects

